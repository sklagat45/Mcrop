<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sklagat46.mcrop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mcrop_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.FruitMarketActivity"></activity>
        <activity android:name=".ui.DemandGraphActivity" />
        <activity android:name=".ui.AddFruitStockActivity" />
        <activity android:name=".ui.AddVegetableStockActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity android:name=".ui.FruitsListActivity" />
        <activity android:name=".ui.VegetablesListActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.Home" />
        <activity android:name=".ui.VegetableMarketActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.ForgotPasswordActivity" />
        <activity android:name=".ui.StockMarketActivity" />
    </application>

</manifest>